generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  hash  String
  role  Role

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime? @updatedAt @map("updated_at") @db.Timestamptz(3)

  investments Investment[]

  @@map("users")
}

enum Role {
  ADMINISTRATOR
  USER
}

model Investment {
  id             Int      @id @default(autoincrement())
  userId         Int
  initialAmount  Float
  currentAmount  Float?
  expectedAmount Float    @default(0)
  investmentDate DateTime @db.Timestamptz(3)

  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime? @updatedAt @map("updated_at") @db.Timestamptz(3)

  user User @relation(fields: [userId], references: [id])

  withdraws Withdraw[]

  @@index([userId], map: "index_user_id")
  @@map("investments")
}

model Withdraw {
  id           Int       @id @default(autoincrement())
  investmentId Int
  withdraw     Float
  amount       Float
  createdAt    DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt    DateTime? @updatedAt @map("updated_at") @db.Timestamptz(3)

  investment Investment @relation(fields: [investmentId], references: [id])

  @@index([investmentId], map: "index_investment_id")
  @@map("withdraws")
}
